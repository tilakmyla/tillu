# {{ansible_managed}}

ZOOMAIN=org.apache.zookeeper.server.quorum.QuorumPeerMain
ZOOCFGDIR={{zookeeper_conf_dir}}/conf
ZOOCFG={{zookeeper_conf_dir}}/conf/zoo.cfg
ZOO_LOG_DIR={{zookeeper_log_dir}}
ZOO_LOG4J_PROP=INFO,ROLLINGFILE
JMXLOCALONLY=false
JAVA_OPTS=""
JVMFLAGS="{{ zookeeper_java_opts }}"
JMXPORT={{ zookeeper_jmx_port }}

# If ZooKeeper is started through systemd, this will only be used for command
# line tools such as `zkCli.sh` and not for the actual server
JAVA=/usr/bin/java

# TODO: This is really ugly
# How to find out which jars are needed?
# Seems that log4j requires the log4j.properties file to be in the classpath
CLASSPATH="{{zookeeper_conf_dir}}/conf:/usr/share/java/jline.jar:/usr/share/java/log4j-1.2.jar:/usr/share/java/xercesImpl.jar:/usr/share/java/xmlParserAPIs.jar:/usr/share/java/netty.jar:/usr/share/java/slf4j-api.jar:/usr/share/java/slf4j-log4j12.jar:/usr/share/java/zookeeper.jar"
